<%= form_for(@company) do |f| %>
  <%= error_messages_for(@company) %>
  <div class="field">
    <%= f.label :name, "Название:" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :permalink, "Постоянная ссылка:" %><br />
    <%= f.text_field :permalink %>
  </div>
  <div class="field">
    <%= f.label :description, "Описание:" %><br />
    <%= f.text_area :description, :cols => 29, :rows => 10 %>
  </div>
  <div class="field">
    <%= f.label :description, "Город:" %><br />
    <%= collection_select(:company, :city_id, City.all, :id, :name) %>
  </div>
  <div class="field">
    <%= f.label :address, "Адрес:" %><br />
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <!--
      TODO :category, and users
    -->
  </div>
  <div class="submit">
    <%= submit_or_cancel(f) %>
  </div>
<% end %>