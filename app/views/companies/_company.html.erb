<div class="company">
  <div class="title">
    <%= @company.name %>
  </div>
  <div class="extra">
    <p>Город: <%= link_to @company.city.name, @company.city %></p>  
    <p>Категория: 
      <%= link_to @company.category.name, city_with_category_path(@company.city, @company.category) %>
    </p>
    <p>
      Рейтинг: <%= render 'rating' %>
    </p>
  </div>
  <div class="description">
    <%= @company.description %>
  </div>
  <% if user_admin_company?(@company) %>
  <div class="add_photo_button">
    <%= link_to "Добавить фотографии", add_photo_company_path(@company) %>
  </div>
  <% end %>
  <div class="dateadd_company">
    Дата добавления: <%= date(@company) %>
  </div>
  <%= owner?(@company) %>
</div>
<%= render 'map' %>