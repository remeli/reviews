<h2 class="title_action">Регистрация</h2>

<div class="new_registration">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= error_messages_for(resource) %>
    <p>
      <%= f.label :email, "E-mail:" %><br />
      <%= f.email_field :email %>
    </p>
    <p>
      <%= f.label :name, "Имя:" %><br />
      <%= f.text_field :name %>
    </p>
    <p class="select_city">
      <%= f.label :city_id, "Город:" %>
      <%= collection_select(:user, :city_id, City.ascname, :id, :name) %>
    </p>
    <p>
      <%= f.label :password, "Пароль:" %><br />
      <%= f.password_field :password %>
    </p>
    <p>
      <%= f.label :password_confirmation, "Повторите пароль" %><br />
      <%= f.password_field :password_confirmation %>
    </p>
    <p>
      <%= f.submit "Регистрация" %>
    </p>
  <% end %>
  <%= render :partial => "devise/shared/links" %>
</div>
