<% @title = "Настройки профиля" %>
<h2 class="title_action">Настройки профиля</h2>


<div class="new_registration">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= error_messages_for(resource) %>
  <p>
    <%= f.label :name, "Имя:" %><br />
    <%= f.text_field :name %>
  </p>
  <p class="select_city">
    <%= f.label :city_id, "Город:" %>
    <%= collection_select(:user, :city_id, City.ascname, :id, :name) %>
  </p>
  <p>
    <%= f.label :about, "О себе:" %><br />
    <%= f.text_area :about, :cols => 35, :rows => 10 %>
  </p>
  <p>
    <%= f.label :password, "Пароль:" %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation, "Потвердите пароль:" %><br /> 
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.label :current_password, "Ваш текущий пароль:" %> <i>(Для внесения изменений)</i><br />
    <%= f.password_field :current_password %>
  </p>
  <p>
    <%= f.submit "Обновить" %>
  </p>
<% end %>
  <div class="back_link">
    <%= link_to "Назад", :back %>  
  </div>
</div>
