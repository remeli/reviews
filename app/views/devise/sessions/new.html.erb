<% @title = "Вход" %>
<h2 class="title_action">Вход</h2>

<div class="sign_in">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <p><%= f.label :email, "E-mail:" %>
    <%= f.email_field :email %></p>

    <p><%= f.label :password, "Пароль:" %>
    <%= f.password_field :password %>
    <span class="sign_in_forgot">
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
        <%= link_to "Забыли пароль?", new_password_path(resource_name) %>
      <% end -%>  
    </span>
    </p>

    <% if devise_mapping.rememberable? -%>
      <p class="remember"><%= f.check_box :remember_me %> <%= f.label :remember_me, "Запомнить меня" %></p>
    <% end -%>

    <p class="submit"><%= f.submit "Вход" %></p>
  <% end %>
</div>
